<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d">

	<Style TargetType="{x:Type GameDetails}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type GameDetails}">

					<Grid Background="{DynamicResource MainBackgourndBrush}"
                          x:Name="PART_ViewHost"
                          d:DesignWidth="{StaticResource DesignWidth}"
                          d:DesignHeight="{StaticResource DesignHeight}"
                          d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameIntance}"
			  FocusManager.FocusedElement="{Binding ElementName=PART_ButtonContext}"
			  Focusable="True"
                          KeyboardNavigation.DirectionalNavigation="Contained"
                          KeyboardNavigation.TabNavigation="Cycle"
                          KeyboardNavigation.ControlTabNavigation="Cycle" >

						<Grid.RowDefinitions>
							<RowDefinition Height="80" />
							<RowDefinition x:Name="DetailsRow" Height="*" />
							<RowDefinition Height="100" />
						</Grid.RowDefinitions>

						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="80"/>
						</Grid.ColumnDefinitions>

						<Border x:Name="Overlay" Grid.RowSpan="3" Grid.ColumnSpan="3" RenderOptions.BitmapScalingMode="Fant" Panel.ZIndex="-48">
							<Border.Style>
								<Style TargetType="Border">
									<Setter Property="Visibility" Value="Visible"/>
									<Setter Property="Opacity" Value="1"/>
									<Style.Triggers>
										<DataTrigger Binding="{Binding ElementName=TrailerZoom, Path=IsChecked}" Value="True">
											<Setter Property="Visibility" Value="Collapsed"/>
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</Border.Style>
							<Border.Background>
								<ImageBrush ImageSource="{ThemeFile 'Images/ShadeDetail.png'}" RenderOptions.BitmapScalingMode="Fant" Stretch="Fill"/>
							</Border.Background>
						</Border>

						<Grid x:Name="MainBackgroundBlurGrid" Panel.ZIndex="-49" >
							<Grid.Style>
								<Style TargetType="Grid">
									<Setter Property="Grid.RowSpan" Value="3"/>
									<Setter Property="Grid.ColumnSpan" Value="3"/>
									<Style.Triggers>

									</Style.Triggers>
								</Style>
							</Grid.Style>
							<Grid Visibility="Visible">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="6*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="6*"/>
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition Height="6*"/>
									<RowDefinition Height="*"/>
									<RowDefinition Height="6*"/>
								</Grid.RowDefinitions>
								<Grid RenderTransformOrigin="0.5,0.5" >
									<Grid.Style>
										<Style TargetType="Grid">
											<Setter Property="Grid.Column" Value="1"/>
											<Setter Property="Grid.Row" Value="1"/>
											<Style.Triggers>

											</Style.Triggers>
										</Style>
									</Grid.Style>
									<Grid.RenderTransform>
										<TransformGroup>
											<ScaleTransform ScaleX="30" ScaleY="30"/>
											<SkewTransform/>
											<RotateTransform />
											<TranslateTransform/>
										</TransformGroup>
									</Grid.RenderTransform>
									<FadeImage x:Name="Fade" Grid.Row="1" Grid.Column="1"
							IsBlurEnabled="true" BlurAmount="{Binding ElementName=SizeGridBlur, Path=ActualHeight}"
							RenderTransformOrigin="0.5,0.5" ImageDarkeningBrush="#FF000000" SourceUpdateDelay="50" >
										<FadeImage.Style>
											<Style TargetType="FadeImage">
												<Setter Property="VerticalAlignment" Value="Stretch"/>
												<Setter Property="HorizontalAlignment" Value="Stretch" />
												<Setter Property="Source" Value="{Binding DisplayBackgroundImageObject}" />
												<Setter Property="Stretch" Value="UniformToFill"/>
												<Setter Property="RenderOptions.BitmapScalingMode" Value="LowQuality"/>
												<Style.Triggers>


												</Style.Triggers>
											</Style>
										</FadeImage.Style>
										<FadeImage.RenderTransform>
											<TransformGroup>
												<ScaleTransform />
												<SkewTransform  />
												<RotateTransform />
												<TranslateTransform/>
											</TransformGroup>
										</FadeImage.RenderTransform>
									</FadeImage>
								</Grid>
								<Grid x:Name="SizeGrid" Grid.Row="1" Grid.Column="1" Visibility="Hidden" >
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="20*"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>
									<Grid.RowDefinitions>
										<RowDefinition Height="20*"/>
										<RowDefinition Height="*"/>
									</Grid.RowDefinitions>
									<Grid x:Name="SizeGridSecond" Grid.Row="1" Grid.Column="1"/>
									<StackPanel x:Name="SizeGridBlur" Grid.Row="1" Grid.Column="1" MinHeight="50">
										<Grid Height="10"/>
										<Grid Height="{Binding ElementName=SizeGridSecond, Path=ActualHeight}"/>
										<Grid Height="{Binding ElementName=SizeGridSecond, Path=ActualWidth}"/>
									</StackPanel>
								</Grid>
							</Grid>
						</Grid>

						<Border x:Name="MediaBorder" Panel.ZIndex="-49" Grid.ColumnSpan="3" Grid.RowSpan="3">
							<Border.Style>
								<Style TargetType="Border">
									<Setter Property="VerticalAlignment" Value="Top"/>
									<Setter Property="HorizontalAlignment" Value="Center"/>
									<Setter Property="Visibility" Value="Visible"/>
									<Setter Property="Opacity" Value="1"/>
									<Setter Property="Height" Value="650"/>
									<Setter Property="Grid.OpacityMask">
										<Setter.Value>
											<ImageBrush ImageSource="{ThemeFile 'Images/FadeBottom.png'}" RenderOptions.BitmapScalingMode="Fant" Stretch="Fill"/>
										</Setter.Value>
									</Setter>
									<Style.Triggers>

									</Style.Triggers>
								</Style>
							</Border.Style>
							<Grid Grid.ColumnSpan="3" Grid.RowSpan="3" VerticalAlignment="Top" HorizontalAlignment="Center"
					Panel.ZIndex="-48" >
								<Grid.Style>
									<Style TargetType="Grid">
										<Setter Property="Opacity" Value="1"/>
										<Style.Triggers>
											<DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Collapsed">
												<Setter Property="Visibility" Value="Collapsed"/>
											</DataTrigger>
										</Style.Triggers>
									</Style>
								</Grid.Style>
								<FadeImage x:Name="MainBackground" Source="{Binding DisplayBackgroundImage, NotifyOnTargetUpdated=True}"
									RenderOptions.BitmapScalingMode="Fant" RenderTransformOrigin="0.5,0.5" SourceUpdateDelay="50"
									HorizontalAlignment="Center" VerticalAlignment="Top" ImageDarkeningBrush="Transparent" >
									<FadeImage.Style>
										<Style TargetType="FadeImage">
											<Setter Property="Stretch" Value="UniformToFill"/>
											<Style.Triggers>
												<DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Collapsed">
													<Setter Property="Visibility" Value="Collapsed"/>
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</FadeImage.Style>
								</FadeImage>
							</Grid>
						</Border>
						<Image Source="{ThemeFileBinding Source.Name, PathFormat='Icons/Source/{0}.png'}"
										   RenderOptions.BitmapScalingMode="Fant" VerticalAlignment="Top" HorizontalAlignment="Left"
										   MaxHeight="60" Opacity="1" Margin="70,45,0,0" Grid.ColumnSpan="2" >
							<Image.Style>
								<Style TargetType="Image">
									<Style.Triggers>
										<DataTrigger Binding="{Binding Source={StaticResource SourceLogoDetails}}" Value="False">
											<Setter Property="Visibility" Value="Collapsed"/>
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</Image.Style>
						</Image>
						<Grid x:Name="GameDetailsStack" Grid.Row="1" Grid.ColumnSpan="3"  HorizontalAlignment="Left" VerticalAlignment="Center" >
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<Grid.Style>
								<Style TargetType="Grid">
									<Setter Property="Opacity" Value="0"/>
									<Setter Property="Margin" Value="80,20,0,0"/>
									<Setter Property="Grid.Row" Value="0"/>
									<Style.Triggers>
										<DataTrigger Binding="{Binding ElementName=Id, Path=Opacity}" Value="1">
											<DataTrigger.EnterActions>
												<BeginStoryboard>
													<Storyboard>
														<ThicknessAnimation Storyboard.TargetProperty="Margin" Duration="0:0:1" From="80,100,0,0">
															<ThicknessAnimation.EasingFunction>
																<CubicEase EasingMode="EaseOut"/>
															</ThicknessAnimation.EasingFunction>
														</ThicknessAnimation>
														<DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0" Duration="0:0:0.7" From="0" To="1"/>
													</Storyboard>
												</BeginStoryboard>
											</DataTrigger.EnterActions>
											<DataTrigger.ExitActions>
												<BeginStoryboard>
													<Storyboard>
														<ThicknessAnimation Storyboard.TargetProperty="Margin" Duration="0:0:0" To="80,0,0,0">
															<ThicknessAnimation.EasingFunction>
																<CubicEase EasingMode="EaseOut"/>
															</ThicknessAnimation.EasingFunction>
														</ThicknessAnimation>
														<DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" From="1" To="0"/>
													</Storyboard>
												</BeginStoryboard>
											</DataTrigger.ExitActions>
										</DataTrigger>
										<DataTrigger Binding="{Binding ElementName=LogoTrigger, Path=Opacity}" Value="1">
											<Setter Property="Visibility" Value="Visible" />
										</DataTrigger>
										<DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Collapsed">
											<Setter Property="Visibility" Value="Collapsed"/>
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</Grid.Style>
							<StackPanel Orientation="Vertical">
								<ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" >
									<ContentControl.Style>
										<Style TargetType="ContentControl">
											<Setter Property="MaxWidth" Value="600"/>
											<Setter Property="MaxHeight" Value="250"/>
											<Setter Property="Opacity" Value="0"/>
											<Setter Property="HorizontalAlignment" Value="Left"/>
											<Setter Property="VerticalAlignment" Value="Center"/>
											<Style.Triggers>
												<DataTrigger Binding="{Binding ElementName=Id, Path=Opacity}" Value="1">
													<DataTrigger.EnterActions>
														<BeginStoryboard>
															<Storyboard>
																<DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0" Duration="0:0:0.7" From="0" To="1"/>
															</Storyboard>
														</BeginStoryboard>
													</DataTrigger.EnterActions>
													<DataTrigger.ExitActions>
														<BeginStoryboard>
															<Storyboard>
																<DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" From="1" To="0"/>
															</Storyboard>
														</BeginStoryboard>
													</DataTrigger.ExitActions>
												</DataTrigger>
												<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
													<Setter Property="Visibility" Value="Collapsed"/>
												</DataTrigger>
												<DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Collapsed">
													<Setter Property="Visibility" Value="Collapsed"/>
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</ContentControl.Style>
								</ContentControl>
								<Image Source="{Binding IconObject}">
									<Image.Style>
										<Style TargetType="Image">
											<Setter Property="Visibility" Value="Collapsed" />
											<Setter Property="Opacity" Value="0" />
											<Setter Property="Margin" Value="0,0,0,50" />
											<Setter Property="MaxWidth" Value="180"/>
											<Setter Property="MaxHeight" Value="180"/>
											<Setter Property="HorizontalAlignment" Value="Left"/>
											<Setter Property="VerticalAlignment" Value="Bottom"/>
											<Style.Triggers>
												<DataTrigger Binding="{Binding ElementName=Id, Path=Opacity}" Value="1">
													<DataTrigger.EnterActions>
														<BeginStoryboard>
															<Storyboard>
																<DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0" Duration="0:0:0.7" From="0" To="1"/>
															</Storyboard>
														</BeginStoryboard>
													</DataTrigger.EnterActions>
													<DataTrigger.ExitActions>
														<BeginStoryboard>
															<Storyboard>
																<DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" From="1" To="0"/>
															</Storyboard>
														</BeginStoryboard>
													</DataTrigger.ExitActions>
												</DataTrigger>
												<DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable}" Value="False">
													<Setter Property="Visibility" Value="Visible" />
												</DataTrigger>
												<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Source}" Value="{x:Null}">
													<Setter Property="Visibility" Value="Collapsed" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</Image.Style>
								</Image>
								<StackPanel Orientation="Vertical" >
									<StackPanel.Style>
										<Style TargetType="StackPanel" >
											<Setter Property="Opacity" Value="0"/>
											<Setter Property="Margin" Value="0,50,0,0"/>
											<Setter Property="MaxWidth" Value="800"/>
											<Setter Property="HorizontalAlignment" Value="Left"/>
											<Style.Triggers>
												<DataTrigger Binding="{Binding ElementName=Id, Path=Opacity}" Value="1">
													<DataTrigger.EnterActions>
														<BeginStoryboard>
															<Storyboard>
																<DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.5" Duration="0:0:1" From="0" To="1"/>
															</Storyboard>
														</BeginStoryboard>
													</DataTrigger.EnterActions>
													<DataTrigger.ExitActions>
														<BeginStoryboard>
															<Storyboard>
																<DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" From="1" To="0"/>
															</Storyboard>
														</BeginStoryboard>
													</DataTrigger.ExitActions>
												</DataTrigger>
												<DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Collapsed">
													<Setter Property="Visibility" Value="Collapsed"/>
												</DataTrigger>
												<DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable}" Value="False">
													<Setter Property="Margin" Value="0,0,0,0" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</StackPanel.Style>
									<StackPanel>

									</StackPanel>
									<StackPanel Orientation="Vertical" >
										<StackPanel.Style>
											<Style TargetType="StackPanel">
												<Setter Property="Margin" Value="0,0,0,0"/>
												<Style.Triggers>
													<DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Collapsed">
														<Setter Property="Visibility" Value="Collapsed"/>
													</DataTrigger>
												</Style.Triggers>
											</Style>
										</StackPanel.Style>
										<StackPanel x:Name="AdditionalGameDetailsPanel" Orientation="Horizontal" >
											<StackPanel.Style>
												<Style TargetType="StackPanel">
													<Setter Property="Margin" Value="0,10,0,0"/>
													<Setter Property="HorizontalAlignment" Value="Left"/>
													<Setter Property="Visibility" Value="Visible"/>
													<Style.Triggers>

													</Style.Triggers>
												</Style>
											</StackPanel.Style>
											<StackPanel Orientation="Horizontal" >
												<!--GameTitles Infobar-->
												<StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" SnapsToDevicePixels="True">
													<TextBlock Style="{StaticResource TextBlockBoldBaseStyle}"
													   Text="{Binding Publishers[0], Converter={StaticResource ListToStringConverter}}"
													   Foreground="#BFEAD3CF" VerticalAlignment="Top"
													   FontSize="28" Margin="0,10,0,0.5" >
													</TextBlock>

													<Rectangle Width="1" Height="28" Fill="#BFEAD3CF" Margin="10,0,10,0" VerticalAlignment="Bottom"/>
													<TextBlock Style="{StaticResource TextBlockBoldBaseStyle}"
														Text="{Binding ReleaseYear, Converter={StaticResource ListToStringConverter}}"
													   Foreground="GhostWhite" VerticalAlignment="Center"
													   FontSize="24" Margin="0.2,10,5,0" >
													</TextBlock>
												</StackPanel>
											</StackPanel>

										</StackPanel>
										<StackPanel Orientation="Vertical" Margin="0,10,0,0" >
											<StackPanel Orientation="Horizontal" Margin="0,0,0,0" >
												<TextBlock Text="{DynamicResource LOCTimePlayed}" Margin="0,2,0,0" FontSize="28" Foreground="#BFEAD3CF" Style="{StaticResource TextBlockBoldBaseStyle}" />
												<Rectangle Width="1" Height="28" Fill="#BFEAD3CF" Margin="10,0,10,0" VerticalAlignment="Stretch"/>
												<TextBlock Text="{Binding Playtime, Converter={StaticResource PlayTimeToStringConverter}}" Margin="0,5,0,0" FontSize="24" Foreground="GhostWhite" Style="{StaticResource TextBlockBoldBaseStyle}" />
											</StackPanel>
											<StackPanel Orientation="Horizontal" Margin="0,10,0,0" >
												<TextBlock Text="{DynamicResource LOCGameLastActivityTitle}" Margin="0,2,0,0" FontSize="28" Foreground="#BFEAD3CF" Style="{StaticResource TextBlockBoldBaseStyle}" />
												<Rectangle Width="1" Height="28" Fill="#BFEAD3CF" Margin="10,0,10,0" VerticalAlignment="Stretch"/>
												<TextBlock Text="{Binding LastActivity, Converter={StaticResource DateTimeToLastPlayedConverter}}" Margin="0,5,0,0" FontSize="24" Foreground="GhostWhite" Style="{StaticResource TextBlockBoldBaseStyle}" />
											</StackPanel>
											<StackPanel Orientation="Horizontal" Margin="0,10,0,0" Tag="{PluginSettings Plugin=SuccessStory, Path=HasData}">
												<StackPanel.Style>
													<Style TargetType="StackPanel">
														<Setter Property="Visibility" Value="Collapsed" />
														<Style.Triggers>
															<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
																<Setter Property="Visibility" Value="Visible" />
															</DataTrigger>
															<DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Collapsed">
																<Setter Property="Visibility" Value="Collapsed" />
															</DataTrigger>
														</Style.Triggers>
													</Style>
												</StackPanel.Style>
												<TextBlock Text="{DynamicResource LOCSuccessStoryAchievements}" Margin="0,2,0,0" FontSize="28" Foreground="#BFEAD3CF" Style="{StaticResource TextBlockBoldBaseStyle}" />
												<Rectangle Width="1" Height="28" Fill="#BFEAD3CF" Margin="10,0,10,0" VerticalAlignment="Stretch"/>
												<TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Unlocked, FallbackValue='-'}"  Style="{StaticResource TextBlockBoldBaseStyle}" Foreground="GhostWhite"  FontSize="24" Margin="0,5,0,0" />
												<TextBlock Text="/" Style="{StaticResource TextBlockAltLightBaseStyle}" FontSize="24" Foreground="#BFEAD3CF" Margin="0,5,0,0" />
												<TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Total, FallbackValue='-'}"  Style="{StaticResource TextBlockBoldBaseStyle}" FontSize="24" Foreground="GhostWhite" Margin="0,5,0,0" />
												<TextBlock Text="(" Style="{StaticResource TextBlockAltLightBaseStyle}" FontSize="24" Foreground="#BFEAD3CF" Margin="10,5,0,0" />
												<TextBlock Text="{PluginSettings Plugin=SuccessStory, Path=Percent, FallbackValue='-', StringFormat='{}{0}%'}" Style="{StaticResource TextBlockBoldBaseStyle}" FontSize="22" Foreground="GhostWhite" Margin="0,6,0,0" />
												<TextBlock Text=")" Style="{StaticResource TextBlockAltLightBaseStyle}" FontSize="24" Foreground="#BFEAD3CF" Margin="0,5,0,0" />
											</StackPanel>
											<!--Game Button-->
											<Grid x:Name="GameButtons" IsEnabled="True" >
												<Grid.Style>
													<Style TargetType="Grid">
														<Setter Property="Opacity" Value="1"/>
														<Setter Property="HorizontalAlignment" Value="Left"/>
														<Setter Property="Margin" Value="0,40,0,0"/>
														<Style.Triggers>
															<DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Collapsed">
																<Setter Property="Visibility" Value="Collapsed" />
															</DataTrigger>
														</Style.Triggers>
													</Style>
												</Grid.Style>
												<StackPanel Orientation="Horizontal" >
													<ButtonEx x:Name="PART_ButtonContext" Style="{DynamicResource ButtonContext}"
														Margin="0,0,20,0" Height="50" MinWidth="240" HorizontalContentAlignment="Center">
													</ButtonEx>
													<ToggleButtonEx x:Name="SuccessButton" Style="{DynamicResource TrophéeToggleButton}"
														Margin="0,0,20,0" Height="50" MinWidth="100" HorizontalContentAlignment="Center">
													</ToggleButtonEx>

													<ButtonEx x:Name="PART_ButtonOptions" Height="50" Width="50"
											Style="{DynamicResource GameDetailsGameOptionsButton}" Margin="0,0,0,0" />
												</StackPanel>
											</Grid>

											<StackPanel>
												<StackPanel.Style>
													<Style TargetType="StackPanel">
														<Setter Property="Visibility" Value="Collapsed"/>
														<Style.Triggers>
															<DataTrigger Binding="{Binding ElementName=SuccessButton, Path=IsChecked}" Value="True">
																<Setter Property="Visibility" Value="Visible"/>
															</DataTrigger>
														</Style.Triggers>
													</Style>
												</StackPanel.Style>
												<ToggleButtonEx x:Name="SuccessChangeToggle" Style="{DynamicResource TrophéeChangeButton}"
													Margin="470,-50,0,0" Height="50" MaxWidth="180"  HorizontalContentAlignment="Center"
													VerticalAlignment="Bottom" HorizontalAlignment="Left">

												</ToggleButtonEx>
											</StackPanel>
											
										</StackPanel>
									</StackPanel>
								</StackPanel>
							</StackPanel>

							<Grid x:Name="ScrollGrid" HorizontalAlignment="Left" VerticalAlignment="Center"
					 FocusVisualStyle="{x:Null}"  >
								<Grid.Style>
									<Style TargetType="Grid" >
										<Setter Property="Opacity" Value="0"/>
										<Setter Property="Margin" Value="0,50,0,0"/>
										<Setter Property="Width" Value="920"/>
										<Setter Property="Grid.Row" Value="1"/>
										<Setter Property="Grid.RowSpan" Value="2"/>
										<Style.Triggers>
											<DataTrigger Binding="{Binding ElementName=Id, Path=Opacity}" Value="1">
												<DataTrigger.EnterActions>
													<BeginStoryboard>
														<Storyboard>
															<DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.5" Duration="0:0:1" From="0" To="1"/>
														</Storyboard>
													</BeginStoryboard>
												</DataTrigger.EnterActions>
												<DataTrigger.ExitActions>
													<BeginStoryboard>
														<Storyboard>
															<DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" From="1" To="0"/>
														</Storyboard>
													</BeginStoryboard>
												</DataTrigger.ExitActions>
											</DataTrigger>
											<DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsKeyboardFocusWithin}" Value="False">
												<Setter Property="Grid.OpacityMask" Value="{DynamicResource ScrollFadeBrush}" />
											</DataTrigger>
											<DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Collapsed">
												<Setter Property="Visibility" Value="Collapsed"/>
											</DataTrigger>
											<DataTrigger Binding="{Binding ElementName=HltbIcon, Path=Visibility}" Value="Visible">
												<Setter Property="Grid.RowSpan" Value="1"/>
											</DataTrigger>
											<DataTrigger Binding="{Binding ElementName=SuccessButton, Path=IsChecked}" Value="True">
												<Setter Property="Visibility" Value="Collapsed"/>
											</DataTrigger>
										</Style.Triggers>
									</Style>
								</Grid.Style>
								<ScrollViewerEx x:Name="PART_ScrollHtmlDescription" FocusVisualStyle="{x:Null}"
						ScrollViewer.VerticalScrollBarVisibility="Hidden" >
									<HtmlTextView x:Name="PART_HtmlDescription"
										HtmlFontSize="{DynamicResource FontSize}" HtmlFontFamily="Kozuka Gothic Pro L"
											HtmlForeground="#BFEAD3CF"
											LinkForeground="{DynamicResource GlyphColor}"
											FocusVisualStyle="{x:Null}" />
								</ScrollViewerEx>
								<Grid.Effect>
									<DropShadowEffect ShadowDepth="2"/>
								</Grid.Effect>
							</Grid>

						</Grid>
